REM Istruzione FOR
REM --------------

FOR $var = 1 TO 10 DO
PRINT $var
NEXT

$y = 0
FOR $x = 1 TO 10 DO
    $y = $y + $x
NEXT

IF $x = 11 THEN
    PRINT "OK"
ENDIF


IF $y = 55 THEN
    PRINT "OK"
ENDIF

FOR $x = 10 TO 1 DO
    $y = $y - $x
NEXT

IF $y = 0 THEN
    PRINT "OK"
ENDIF

